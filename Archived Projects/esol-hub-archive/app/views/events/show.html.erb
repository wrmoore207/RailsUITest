<!-- app/views/events/show.html.erb -->
<div class="container mx-auto p-8">
  <div class="mb-4">
    <h1 class="text-3xl font-bold text-gray-800 mb-2"><%= @event.name %></h1>
    <p class="text-gray-600">
      <%= @event.start_time.strftime('%B %d, %Y at %I:%M %p') %>
    </p>
  </div>
  <div class="bg-white shadow rounded p-6">
    <p class="text-lg text-gray-700"><%= @event.description %></p>
  </div>
  <div class="mt-6">
    <%= link_to "Back to Calendar", events_path, class: "inline-block bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>
