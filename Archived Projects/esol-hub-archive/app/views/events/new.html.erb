<!-- app/views/events/new.html.erb -->
<div class="container mx-auto p-8">
  <h1 class="text-3xl font-bold mb-6">New Event</h1>

  <%= form_with model: @event, local: true do |f| %>
    <div class="mb-4">
      <%= f.label :name, class: "block text-gray-700" %>
      <%= f.text_field :name, class: "mt-1 block w-full border-gray-300 rounded" %>
    </div>
    
    <div class="mb-4">
      <%= f.label :description, class: "block text-gray-700" %>
      <%= f.text_area :description, class: "mt-1 block w-full border-gray-300 rounded" %>
    </div>
    
    <div class="mb-4">
      <%= f.label :start_time, "Event Date & Time", class: "block text-gray-700" %>
      <%= f.datetime_select :start_time, class: "mt-1 block w-full border-gray-300 rounded" %>
    </div>
    
    <div class="mb-4">
      <%= f.submit "Create Event", class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>
