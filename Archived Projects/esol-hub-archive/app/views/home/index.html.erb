<!-- app/views/home/index.html.erb -->
<div class="bg-gradient-to-b from-blue-50 to-gray-100 h-full">
  <!-- Hero Section -->
  <header class="pt-12 mb-8 text-center max-w-3xl mx-auto px-4">
    <h1 class="text-3xl md:text-4xl font-bold mb-3 text-blue-800 leading-tight">
      Welcome to the ESOL Hub
    </h1>
    <p class="text-lg text-gray-700 leading-relaxed">
      Discover, Connect, and Grow with our vibrant community supporting Portland's multilingual learners.
    </p>
  </header>

  <% if session[:userinfo].present? %>
    <!-- Navigation Bar Style -->
    <div class="max-w-6xl mx-auto w-full px-4">
      <nav class="bg-white shadow-md rounded-lg overflow-hidden">
        <div class="flex flex-col md:flex-row md:justify-evenly md:items-center w-full">
          <a href="/dashboard" class="group flex items-center p-4 border-l-4 border-transparent hover:bg-blue-50 hover:border-blue-500 transition-all duration-200 md:flex-1 md:max-w-xs">
            <div class="flex items-center justify-center w-8 h-8 rounded-full bg-blue-100 text-blue-600 mr-3 flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
            </div>
            <div>
              <h2 class="text-lg font-semibold text-gray-800 group-hover:text-blue-600 transition-colors">Dashboard</h2>
              <p class="text-gray-600 text-sm">Update your profile and manage community engagement</p>
            </div>
          </a>
          
          <a href="/events" class="group flex items-center p-4 border-l-4 border-transparent hover:bg-green-50 hover:border-green-500 transition-all duration-200 md:flex-1 md:max-w-xs">
            <div class="flex items-center justify-center w-8 h-8 rounded-full bg-green-100 text-green-600 mr-3 flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
            <div>
              <h2 class="text-lg font-semibold text-gray-800 group-hover:text-green-600 transition-colors">Event Hub</h2>
              <p class="text-gray-600 text-sm">Find and coordinate upcoming events</p>
            </div>
          </a>
          
          <%= link_to resources_path, class: "group flex items-center p-4 border-l-4 border-transparent hover:bg-purple-50 hover:border-purple-500 transition-all duration-200" do %>
            <div class="flex items-center justify-center w-8 h-8 rounded-full bg-purple-100 text-purple-600 mr-3 flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
              </svg>
            </div>
            <div>
              <h2 class="text-lg font-semibold text-gray-800 group-hover:text-purple-600 transition-colors">Free Resources</h2>
              <p class="text-gray-600 text-sm">Browse free items for the community</p>
            </div>
          <% end %>
          
          <%= link_to simple_discussion_path, class: "group flex items-center p-4 border-l-4 border-transparent hover:bg-yellow-50 hover:border-yellow-500 transition-all duration-200" do %>
            <div class="flex items-center justify-center w-8 h-8 rounded-full bg-yellow-100 text-yellow-600 mr-3 flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z" />
              </svg>
            </div>
            <div>
              <h2 class="text-lg font-semibold text-gray-800 group-hover:text-yellow-600 transition-colors">Community Forum</h2>
              <p class="text-gray-600 text-sm">Engage in discussion and get support</p>
            </div>
          <% end %>
        </div>
      </nav>
    </div>

  <% else %>
    <!-- Visitor: Enhanced Login Section -->
    <div class="bg-white rounded-lg shadow-lg p-6 max-w-md w-full mx-auto mt-12 text-center">
      <div class="mb-4 inline-block p-2 rounded-full bg-blue-100">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
      </div>
      <h2 class="text-2xl font-bold mb-4 text-gray-800">Join Our Community</h2>
      <p class="text-gray-700 mb-8 leading-relaxed">
        Discover how we empower Portland's multilingual community through resources, events, and collaborative support.
      </p>
      <%= button_to "Login", "/auth/auth0", method: :post, data: { turbo: false }, class: "w-full px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-300 font-semibold text-lg shadow-md" %>
      <p class="mt-4 text-sm text-gray-500">New to ESOL Hub? Sign up when you log in.</p>
    </div>

    <!-- Features Teaser -->
    <div class="mt-8 w-full max-w-4xl mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="bg-white p-4 rounded-lg shadow-md">
          <div class="flex mb-2">
            <div class="flex items-center justify-center w-6 h-6 mr-2 rounded-full bg-blue-100 text-blue-600">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" viewBox="0 0 20 20" fill="currentColor">
                <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z" />
              </svg>
            </div>
            <h3 class="font-semibold text-sm text-gray-800">Supportive Community</h3>
          </div>
          <p class="text-gray-600 text-xs">Connect with teachers, learners, and volunteers who share your goals.</p>
        </div>
        
        <div class="bg-white p-4 rounded-lg shadow-md">
          <div class="flex mb-2">
            <div class="flex items-center justify-center w-6 h-6 mr-2 rounded-full bg-green-100 text-green-600">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" viewBox="0 0 20 20" fill="currentColor">
                <path d="M7 3a1 1 0 000 2h6a1 1 0 100-2H7zM4 7a1 1 0 011-1h10a1 1 0 110 2H5a1 1 0 01-1-1zM2 11a2 2 0 012-2h12a2 2 0 012 2v4a2 2 0 01-2 2H4a2 2 0 01-2-2v-4z" />
              </svg>
            </div>
            <h3 class="font-semibold text-sm text-gray-800">Valuable Resources</h3>
          </div>
          <p class="text-gray-600 text-xs">Access learning materials, teaching tools, and community resources.</p>
        </div>
        
        <div class="bg-white p-4 rounded-lg shadow-md">
          <div class="flex mb-2">
            <div class="flex items-center justify-center w-6 h-6 mr-2 rounded-full bg-purple-100 text-purple-600">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM4.332 8.027a6.012 6.012 0 011.912-2.706C6.512 5.73 6.974 6 7.5 6A1.5 1.5 0 019 7.5V8a2 2 0 004 0 2 2 0 011.523-1.943A5.977 5.977 0 0116 10c0 .34-.028.675-.083 1H15a2 2 0 00-2 2v2.197A5.973 5.973 0 0110 16v-2a2 2 0 00-2-2 2 2 0 01-2-2 2 2 0 00-1.668-1.973z" clip-rule="evenodd" />
              </svg>
            </div>
            <h3 class="font-semibold text-sm text-gray-800">Local Events</h3>
          </div>
          <p class="text-gray-600 text-xs">Join workshops, social gatherings, and educational events around Portland.</p>
        </div>
      </div>
    </div>
  <% end %>
</div>