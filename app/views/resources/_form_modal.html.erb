<turbo-frame id="new_resource_modal">
  <div class="fixed inset-0 z-50 flex items-center justify-center bg-black/30 backdrop-blur-sm" data-controller="railsui-modal">
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-xl max-w-lg w-full p-6 border dark:border-slate-700">
      <h2 class="text-lg font-semibold text-slate-800 dark:text-white mb-4">New Resource</h2>

      <%= form_with model: @resource, url: resources_path, method: :post, data: { turbo_frame: "new_resource_modal" } do |f| %>
        <div class="space-y-4">
          <div>
            <%= f.label :name, class: "block text-sm font-medium text-slate-700 dark:text-white" %>
            <%= f.text_field :name, class: "form-input w-full" %>
          </div>

          <div>
            <%= f.label :posted_at, "Posted Date", class: "block text-sm font-medium text-slate-700 dark:text-white" %>
            <%= f.date_field :posted_at, class: "form-input w-full" %>
          </div>

          <div>
            <%= f.label :category, class: "block text-sm font-medium text-slate-700 dark:text-white" %>
            <%= f.text_field :category, class: "form-input w-full" %>
          </div>

          <div>
            <%= f.label :description, class: "block text-sm font-medium text-slate-700 dark:text-white" %>
            <%= f.text_area :description, class: "form-textarea w-full" %>
          </div>

          <div class="flex items-center gap-2">
            <%= f.check_box :fulfilled, class: "form-checkbox" %>
            <%= f.label :fulfilled, "Mark as Active", class: "text-sm font-medium text-slate-700 dark:text-white" %>
          </div>
        </div>

        <div class="mt-6 flex justify-end gap-3">
          <%= button_to "Cancel", "#", class: "btn btn-secondary", data: { action: "click->railsui-modal#close" }, method: :get %>
          <%= f.submit "Create", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</turbo-frame>
