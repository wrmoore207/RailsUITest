<div class="max-w-4xl mx-auto mt-10 p-6 bg-white dark:bg-slate-800 rounded-lg shadow">
  <h2 class="text-xl font-semibold mb-2 text-slate-800 dark:text-slate-200"><%= @message.subject %></h2>
  <p class="text-sm text-slate-500 dark:text-slate-400 mb-4">From: <%= @message.sender %> • Sent <%= @message.created_at.strftime("%b %d, %Y") %></p>
  <p class="text-slate-700 dark:text-slate-300"><%= simple_format(@message.body) %></p>

  <div class="mt-6">
  <h3 class="font-medium text-slate-700 dark:text-slate-300">Comments</h3>

  <%= render partial: "messages/form_comment", locals: { comment: Comment.new, message: @message } %>

  <div class="mt-4 space-y-4">
    <%= render partial: "messages/comment", collection: @message.comments, as: :comment %>
  </div>
</div>


  <%= link_to "← Back to Inbox", messages_path, class: "text-blue-600 hover:underline inline-block mt-6" %>
</div>
