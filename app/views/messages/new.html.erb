<turbo-frame id="new_message_modal">
  <div class="fixed inset-0 z-[100] bg-black/50 backdrop-blur-sm flex justify-center items-start overflow-y-auto px-4 py-10">
    <div class="bg-white dark:bg-slate-800 rounded-lg shadow-xl w-full max-w-2xl p-6 space-y-4">
      <div class="flex justify-between items-center">
        <h2 class="text-xl font-semibold text-slate-800 dark:text-slate-200">New Message</h2>
        <button data-action="click->railsui-modal#close" class="text-slate-500 hover:text-red-500 dark:text-slate-400 dark:hover:text-red-400">
          &times;
        </button>
      </div>
      <%= render "form_modal", message: @message %>
    </div>
  </div>
</turbo-frame>
