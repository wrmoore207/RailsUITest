<%= form_with model: [@message, comment], local: false do |f| %>
  <div class="flex flex-col space-y-2 mt-4">
    <%= f.text_area :content, placeholder: "Add a comment...", class: "w-full rounded-md border border-slate-300 dark:border-slate-700 dark:bg-slate-800 dark:text-white p-2" %>
    <%= f.hidden_field :parent_id %>
    <div class="flex justify-end">
      <%= f.submit "Post", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
    </div>
  </div>
<% end %>
