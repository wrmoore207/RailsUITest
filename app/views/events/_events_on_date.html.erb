<!-- _events_on_date.html.erb -->
<div class="p-6 bg-white rounded-lg shadow-xl dark:bg-slate-800 dark:text-white">
  <h2 class="text-lg font-semibold mb-4">Events on <%= date.strftime("%B %d, %Y") %></h2>

  <% events.each do |event| %>
    <div class="mb-4">
      <h3 class="text-md font-medium"><%= event.title %></h3>
      <p class="text-sm text-slate-500 dark:text-slate-300"><%= event.date.strftime("%I:%M %p") %> â€“ <%= event.location %></p>
      <p class="text-sm"><%= event.description %></p>
    </div>
  <% end %>

  <%= link_to "Close", "#", class: "btn btn-light mt-4", data: { action: "click->modal#close" } %>
</div>
